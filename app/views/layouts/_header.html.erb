                  <div class="form-check mb-2">
                    <%= form.check_box :remember_me, class: "form-check-input", id: "exampleCheck1" %>
                    <%= form.label :remember_me, "Remember me", class: "form-check-label", for: "exampleCheck1" %>
                  </div>
                  <%= form.submit "Sign in", class: "btn btn-primary submit mb-4" %>
                <% end %>
                <div>
                  <p>New user?</p>
                  <%= link_to "Sign up now", signup_path, class: "btn btn-primary submit mb-4" %>
                </div>
            </div>
          <% else %>
            <%= link_to "Profile", profile_path, class: "btn btn-primary submit mb-4", display: "block"   %>
            <%= link_to "Log out", logout_url, data: {turbo_method: :delete}, class: "btn btn-primary submit mb-4"  %>
